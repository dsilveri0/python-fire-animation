#!/usr/bin/env python3

from colr import color
from random import randint

# Global var (Matrix)
matrix = 0
rows, cols = (15, 15)

def initMatrix():
    matrix = [[0 for i in range(cols)] for j in range(rows)]
    for i in range(15):
        matrix[14][i] = 36
    return matrix

# Put inside function
matrix = initMatrix()

def calcMatrixVal():
    print(randint(1, 10))

    m = [[0 for i in range(cols)] for j in range(rows)]

    for i in range(15):
        m[14][i] = 36

    for i in range(1, rows):
        for j in range(cols):
            m[i][j] = m[i-1][j] + randint(0, 4)
            if m[i][j] > 36:
                m[i][j] = 36
    return m

matrix = calcMatrixVal()

# Render colours.
for i in range(15):
    for j in range(15):
        print(color(matrix[i][j], fore=(203, 74, 65)), end = " ")
        t = 0
    print("")
print("")
